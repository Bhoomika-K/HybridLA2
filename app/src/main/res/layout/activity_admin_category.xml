<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCategoryActivity">

    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Add New Product"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:id="@+id/linear1_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/slogan_category">

        <ImageView
            android:id="@+id/dress"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/dress_icon"/>

        <ImageView
            android:id="@+id/jumpsuit"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/jumpsuit_icon"/>

        <ImageView
            android:id="@+id/top"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/tshirt_icon"/>

        <ImageView
            android:id="@+id/skirt"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/skirt_icon"/>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/linear1_category">


        <ImageView
            android:id="@+id/flat"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/flats_icon"/>


        <ImageView
            android:id="@+id/shoe"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/shoe_icon"/>

        <ImageView
            android:id="@+id/heel"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/heels_icon"/>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear3_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/linear2_category">


        <ImageView
            android:id="@+id/handbag"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/handbag_icon"/>

        <ImageView
            android:id="@+id/wallet"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/wallet_icon"/>


        <ImageView
            android:id="@+id/backpack"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/backpack_icon"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear4_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/linear3_category">

        <ImageView
            android:id="@+id/accessory"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/acc_icon"/>

        <ImageView
            android:id="@+id/watch"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="40dp"
            android:src="@drawable/watch_icon"/>


    </LinearLayout>
</RelativeLayout>
